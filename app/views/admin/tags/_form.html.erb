<%= form_for([:admin, @tag]) do |form| %>
  <h3>New Tag</h3>

  <div>
    <div class="flex justify-between">
      <div class="w-full">
        <%= form.text_field :name, autofocus: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm" %>
      </div>

      <div class="flex items-center">
        <%= form.submit "Create Tag", format: :html, class: "ml-4 block cursor-pointer justify-center px-3 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500" %>
      </div>
    </div>
    <div class="flex my-1">
      <% if @tag.errors.attribute_names.include?(:name) %>
        <span class="text-sm text-red-500"><%= "Name #{@tag.errors[:name].join(', ')}" %></span>
      <% else %>
        <span class="text-sm text-white">.</span>
      <% end %>
    </div>
  </div>

  <hr>
<% end %>