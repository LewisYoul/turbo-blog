<%= turbo_frame_tag 'new_post', target: '_top' do %>
  <%= form_for([:admin, @post], url: admin_posts_path(format: :html)) do |form| %>
    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :title, autofocus: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm" %>
      </div>
    </div>

    <div class="mt-4">
      <%= form.label :summary, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_area :summary, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm" %>
      </div>
    </div>

    <div class="mt-4">
      <div class="flex justify-between">
        <%= form.label :body, class: "px-1 py-4 text-sm font-medium text-gray-700" %>

        <div class="flex items-center">
          <div>
            <%= turbo_frame_tag 'body_write_tab' do %>
              <%= form.submit 'Write', formaction: admin_posts_preview_index_path(preview: false), class: "#{@preview ? 'bg-white' : ''} cursor-pointer text-gray-500 hover:text-gray-700 px-3 py-2 font-medium text-sm rounded-md" %>
            <% end %>

            <%= turbo_frame_tag 'body_preview_tab' do %>
              <%= form.submit 'Preview', formaction: admin_posts_preview_index_path(preview: true), class: "#{@preview ? '' : 'bg-white'} cursor-pointer text-gray-500 hover:text-gray-700 px-3 py-2 font-medium text-sm rounded-md" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="<%= @preview ? 'hidden' : '' %> mt-1">
        <%= form.text_area :body, rows: 30, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm" %>
      </div>

      <% if @preview %>
        <div class="mt-1">
          <%= raw(@parsed_body) %>
        </div>
      <% end %>
      
      <div class="flex justify-end w-full">
        <%= form.submit 'Create Post', format: :html, class: "mt-4 cursor-pointer flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500" %>
      </div>

    </div>
  <% end %>
<% end %>