<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <%= link_to(root_path) do %>
      <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg" alt="Workflow">
    <% end %>
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Create an account
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Or
      <%= link_to('sign in to an existing one', new_user_session_path, class: "font-medium text-pink-600 hover:text-pink-500") %>
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6", data: { turbo: false } }) do |f| %>

        <div>
          <%= f.label :first_name, 'First name', class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm" %>
            <% if resource.errors[:first_name]&.any? %>
              <p class="text-red-600 text-xs mt-1"><%= "First name #{resource.errors[:first_name].join(', ')}" %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :last_name, 'Last name', class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm" %>
            <% if resource.errors[:last_name]&.any? %>
              <p class="text-red-600 text-xs mt-1"><%= "Last name #{resource.errors[:last_name].join(', ')}" %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :email, 'Email address', class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm" %>
            <% if resource.errors[:email]&.any? %>
              <p class="text-red-600 text-xs mt-1"><%= "Email #{resource.errors[:email].join(', ')}" %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm" %>
            <% if resource.errors[:password]&.any? %>
              <p class="text-red-600 text-xs mt-1"><%= "Password #{resource.errors[:password].join(', ')}" %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password_confirmation, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm" %>
            <% if resource.errors[:password_confirmation]&.any? %>
              <p class="text-red-600 text-xs mt-1"><%= "Password confirmation #{resource.errors[:password_confirmation].join(', ')}" %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.submit "Sign up", class: "cursor-pointer w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

