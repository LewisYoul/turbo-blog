<%= form_with url: search_index_path do |form| %>
  <%= form.text_field(:search_term, autofocus: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm") %>
  <%= form.submit('Search', class: 'hidden') %>
<% end %>

<%= render partial: 'posts/posts', locals: { next_page_path: :search_index_path } %>